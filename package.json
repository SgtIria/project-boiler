{
  "name": "skeleton",
  "version": "1.0.0",
  "description": "Default skeleton project",
  "main": "index.js",
  "author": "Andrew Mepham <andy@mepham.info> (http://mepham.info/)",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.10.0",
    "browserify": "^6.3.2",
    "coffeeify": ">=1.2.0",
    "faker": "^3.0.1",
    "hashmark": "^2.0.0",
    "jade": "^1.11.0",
    "jeet": "^6.1.2",
    "jshint": "^2.5.10",
    "json-server": "^0.8.4",
    "kouto-swiss": "^0.11.13",
    "lodash": "^3.10.1",
    "minifyify": "^4.4.0",
    "nodemon": "^1.2.1",
    "opener": "^1.4.0",
    "parallelshell": "^1.0.0",
    "q": "^1.4.1",
    "rimraf": "^2.2.8",
    "riot": "^2.3.11",
    "stylus": "^0.49.3",
    "watchify": "^3.6.1"
  },
  "scripts": {
    "clean": "rimraf dist/*",
    "prebuild": "npm run clean -s",
    "watch": "parallelshell \"npm run w:build -s\"",
    "dev": "npm run watch & npm run serve",
    "build": "npm run b:scripts -s && npm run b:uglyify && npm run b:styles -s && npm run b:markup -s && npm run b:inc",
    "b:inc": "echo 1 >> assets/counter",
    "b:uglyify": "uglifyjs  dist/dev-bundle.js -c -o dist/bundle.js && hashmark dist/bundle.js -s -l 8 -m assets.json 'dist/{name}-{hash}{ext}'",
    "b:scripts": "browserify -t coffeeify assets/scripts/main.coffee -d > dist/dev-bundle.js && hashmark dist/dev-bundle.js -s -l 8 -m assets.json 'dist/{name}-{hash}{ext}'",
    "b:styles": "stylus assets/styles/site.styl -m -o dist/ && hashmark -s -l 8 -m assets.json dist/site.css 'dist/{name}-{hash}{ext}'",
    "b:tags": "riot -m --type coffee --expr --template jade assets/tags/ assets/tags/alltags.js",
    "b:markup": "jade assets/markup/index.jade --obj assets.json -o dist",
    "serve": "browser-sync start --files \"assets/counter \" --server \"dist\" ",
    "w:tags": "nodemon -q -w asets/ --ext js,jade,coffee,styl --exec 'npm run build'",
    "w:build": "nodemon -q -w asets/ --ext js,jade,coffee,styl --exec 'npm run build'",
    "w:styles": "nodemon -q -w asets/ --ext js,jade,coffee,styl --exec 'npm run build'",
    "w:jade": "nodemon -q -w asets/ --ext js,jade,coffee,styl --exec 'npm run build'"
  }
}
